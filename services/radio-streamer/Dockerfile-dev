FROM rust:1.66.0

ARG FFMPEG_VERSION=5.1
ARG FFMPEG_URL="https://ffmpeg.org/releases/ffmpeg-$FFMPEG_VERSION.tar.bz2"

RUN apt-get update

RUN apt-get install -y --no-install-recommends nasm yasm libclang-dev

WORKDIR /build

RUN \
      wget -O ffmpeg.tar.bz2 "$FFMPEG_URL" && \
      tar xf ffmpeg.tar.bz2 && \
      cd ffmpeg-* && \
      ./configure \
      --disable-everything \
      --enable-shared \
      --enable-avutil \
      --enable-avcodec \
      --enable-avformat \
      --enable-avdevice \
      --enable-avfilter \
      --enable-openssl \
      --enable-swresample \
      --enable-decoder=flac,pcm_s16le,aac \
      --enable-demuxer=flac,wav,aac,m4a \
      --enable-protocol=file \
      && make install \
      && ldconfig

ARG USER=1000:1000

RUN mkdir /rust && chown $USER /rust

USER $USER

ENV HOME=/rust

WORKDIR /code

#COPY --from=mwader/static-ffmpeg:5.0.1-3 /ffmpeg /usr/local/bin/
#COPY --from=mwader/static-ffmpeg:5.0.1-3 /ffprobe /usr/local/bin/
