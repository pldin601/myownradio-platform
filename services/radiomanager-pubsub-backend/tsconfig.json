{
    "compilerOptions": {
      "skipLibCheck": true,
      "outDir": "dist",
      "lib": ["es2020"],
      "target": "es2020",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "types": ["node"],
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "ts-node": {
      "esm": true
    },
    "include": ["src/index.ts"],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }