{
    "compilerOptions": {
      "target": "es2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "dist",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "types": ["node"],
      "typeRoots": ["node_modules/@types"]
    },
    "ts-node": {
      "esm": true
    },
    "include": ["src/index.ts"],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
